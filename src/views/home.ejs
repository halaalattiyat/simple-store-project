<%- include('partials/header', { title: 'Home — SimpleStore V2' }) %>

<div class="hero">
  <div class="hero-left">
    <h1 class="fw-bold mb-2">Discover premium products — curated for you</h1>
    <p class="text-muted mb-3">Great deals, fast delivery, and secure checkout. Explore new arrivals and best sellers.</p>
    <a href="/products" class="btn btn-primary btn-lg">Shop now</a>
  </div>
  <div class="hero-right">
    <img src="https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=600&q=80" alt="hero">
  </div>
</div>

<h4 class="mb-3">Featured products</h4>
<div class="product-grid mb-4">
  <% featuredProducts.forEach(p => { %>
    <div class="product-card">
      <img src="<%= p.image %>" alt="<%= p.name %>" class="product-image">
      <div class="product-body">
        <div class="product-cat"><%= p.category %></div>
        <div class="product-name"><a href="/products/<%= p.id %>" class="stretched-link text-decoration-none text-dark"><%= p.name %></a></div>
        <div class="d-flex justify-content-between align-items-center mt-2">
          <div class="product-price">$<%= p.price %></div>
          <div>
            <button data-quickview="<%= p.id %>" class="btn btn-sm btn-outline-secondary btn-ghost"><i class="bi bi-eye"></i></button>
            <form method="post" action="/api/orders" class="d-inline">
              <input type="hidden" name="productId" value="<%= p.id %>">
              <input type="hidden" name="userId" value="u01">
              <button class="btn btn-sm btn-primary">Buy</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>
